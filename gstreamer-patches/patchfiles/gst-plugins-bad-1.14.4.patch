+        GST_PAD_NAME(data2->pad), GST_TIME_ARGS(ts2),GST_TIME_ARGS(GST_COLLECT_PADS_DTS(data2)));
+    if (ts1 < ts2)
+        return -1;
+    else if (ts2 < ts1)
+        return 1;
+    else
+        return 0;
